<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="768.0" prefWidth="1024.0">
         <top>
            <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <MenuBar>
                    <menus>
                      <Menu mnemonicParsing="false" text="Options">
                        <items>
                              <Menu mnemonicParsing="false" text="Update Store">
                                 <items>
                                    <MenuItem mnemonicParsing="false" onAction="#addBookPressed" text="Add Book" />
                                    <MenuItem mnemonicParsing="false" onAction="#addCDPressed" text="Add CD" />
                                    <MenuItem mnemonicParsing="false" onAction="#addDVDPressed" text="Add DVD" />
                                    <MenuItem mnemonicParsing="false" onAction="#removePressed" text="Remove Media" />
                                 </items>
                              </Menu>
                          <MenuItem mnemonicParsing="false" onAction="#viewStorePressed" text="View Store" />
                              <MenuItem mnemonicParsing="false" onAction="#viewCartPressed" text="View Cart" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <Label text="CART - NNAT - 20215143" textFill="#000080de">
                     <font>
                        <Font size="50.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
               </children>
            </VBox>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label text="Filter" />
                        <TextField fx:id="tfFilter" />
                        <RadioButton fx:id="radioBtnFilterId" mnemonicParsing="false" onMousePressed="#byFilterPressed" selected="true" text="By ID">
                           <toggleGroup>
                              <ToggleGroup fx:id="filterCategory" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBtnFilterTitle" mnemonicParsing="false" onMousePressed="#byFilterPressed" text="By Title" toggleGroup="$filterCategory" />
                        <Label text="Sort">
                           <HBox.margin>
                              <Insets left="250.0" />
                           </HBox.margin>
                        </Label>
                        <RadioButton fx:id="radioBtbSortCost" mnemonicParsing="false" onMouseClicked="#radioBtbSortCostPressed" text="By Cost">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <toggleGroup>
                              <ToggleGroup fx:id="sortCategory" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="radioBtbSortTitle" mnemonicParsing="false" onMouseClicked="#radioBtbSortTitlePressed" text="By Title" toggleGroup="$sortCategory" />
                     </children>
                  </HBox>
                  <TableView fx:id="tblMedia">
                    <columns>
                      <TableColumn fx:id="colMediaTitle" prefWidth="75.0" text="Title" />
                      <TableColumn fx:id="colMediacategory" prefWidth="75.0" text="Category" />
                        <TableColumn fx:id="colMediaCost" prefWidth="75.0" text="Cost" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayPressed" text="Play" />
                      <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#btnRemovePressed" text="Remove" />
                    </buttons>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </ButtonBar>
               </children>
            </VBox>
         </center>
         <right>
            <VBox prefHeight="200.0" BorderPane.alignment="TOP_CENTER">
               <padding>
                  <Insets top="50.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="Total: ">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label fx:id="labelCost" text="0 $" textFill="NAVY">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#btnPlaceOrderPressed" style="-fx-background-color: navy;" text="Place Order" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </right>
      </BorderPane>
   </children>
</AnchorPane>
